{
    "builds": [
      {
        "src": "app/**/*.py",
        "use": "@vercel/python"
      },
      {
        "src": "src/app.js",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "src/api/$1.py" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }
  